{
    "parser": "@babel/eslint-parser",
    "parserOptions": {
        "sourceType": "script",
        "ecmaVersion": 2018
    },
    "extends": [
        "eslint:recommended"
    ],
    "env": {
        "node": true
    },
    "plugins": ["jsdoc"],
    "rules": {
        "no-console": ["warn", { "allow": ["error","info"] }],
        "quotes": ["error", "single"], 
        "indent": ["warn", 4, { "SwitchCase": 1 }], 
        "max-len": ["warn", {"code": 200}], 
        "comma-dangle": ["error", "never"], 
        "semi": ["warn", "always"],

        "jsdoc/check-alignment": 1
    }
}